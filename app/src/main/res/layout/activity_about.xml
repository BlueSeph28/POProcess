<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.luislopez.poprocess.about"
    android:id="@+id/relative_about">

    <ImageView
        android:layout_width="@dimen/about_iconSize"
        android:layout_height="@dimen/about_iconSize"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POProcess"
        android:id="@+id/textView5"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/information"
        android:id="@+id/information_text"
        android:layout_marginTop="@dimen/about_textMargin"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/about_text" />

    <Button
        android:layout_width="wrap_content"
        android:textSize="@dimen/buttons_textSize"
        android:layout_height="wrap_content"
        android:text="@string/buy_button"
        android:background="@drawable/blue_button"
        android:id="@+id/buy"
        android:layout_marginTop="@dimen/buy_marginTop"
        android:layout_below="@+id/information_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:paddingLeft="@dimen/buy_padding"
        android:paddingRight="@dimen/buy_padding" />

</RelativeLayout>
